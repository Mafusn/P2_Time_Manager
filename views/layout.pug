doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content= 'width=device-width, initial-scale=1')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    .container
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        .row.align-items-start
          .col-md-12
            nav.navbar.fixed-top.navbar-expand-lg.navbar-light(style='background-color: #7BBF54;')
              .container-fluid
                a.navbar-brand(href='/')
                  img(src='https://i.guim.co.uk/img/media/26392d05302e02f7bf4eb143bb84c8097d09144b/446_167_3683_2210/master/3683.jpg?width=1200&height=1200&quality=85&auto=format&fit=crop&s=49ed3252c0b2ffb49cf8b508892e452d' alt='Logo' style='width:100px;height:60px;')
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                  span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                  ul.navbar-nav.me-auto.mb-2.mb-lg-0
                    li.nav-item
                      a.nav-link.active(aria-current='page' href='/' style='color: #FFFFFF;') Home
                    li.nav-item
                      a.nav-link(href='/timesheet' style='color: #FFFFFF;') Timesheet
                    li.nav-item
                      a.nav-link(href='/shift-management' style='color: #FFFFFF;') Shift management
                    li.nav-item
                      a.nav-link(href='/messages' style='color: #FFFFFF;') Messages
                  form.d-flex
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                      li.nav-item
                        a.nav-link(href='/settings')
                          img(src='https://img.icons8.com/ios-glyphs/344/settings--v1.png' alt='Settings' style='width:42px;height:42px;')
                      li.nav-item
                        a.nav-link(href='/profile')
                          img(src='https://img.icons8.com/ios-glyphs/344/user--v1.png' alt='Profile' style='width:42px;height:42px;')
    
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        .sidenav
          form.row.row-cols-lg-auto.g-3.align-items-center
            .col-12
              label.visually-hidden(for='inlineFormInputGroupUsername') Username
              .input-group
                .input-group-text
                  img(src='https://img.icons8.com/ios-glyphs/344/user--v1.png' alt='Profile' style='width:30px;height:30px;')
                label#inlineFormInputGroupUsername.form-control(type='text')
                  | Username
  
    block content
