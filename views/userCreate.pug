extends layout_manager

block content
    br
    h1.homepage(style='text-align: center;')= title

    form(method='POST' action='')
        div.form-group
        label(for='firstname') First name:
        input#name.form-control(type='text' placeholder='First name' name='firstname' required='true')
        label(for='lastname') Last name:
        input#name.form-control(type='text' placeholder='Last name' name='lastname' required='true')
        div.form-group
        label(for='username') Username:
        input#name.form-control(type='text' placeholder='Username' name='username' required='true')
        label(for='password') Password:
        input#name.form-control(type='text' placeholder='Password' name='password' required='true')
        div.form-group
        label(for='position') Position:
        select#position.form-control(type='select' placeholder='Select position' name='position' required='true')
            option(value='Employee') Employee
            option(value='Manager') Manager
        br
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
        for error in errors
            li!= error.msg